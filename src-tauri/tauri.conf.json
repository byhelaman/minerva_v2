{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Minerva",
  "version": "0.1.2",
  "identifier": "com.minerva.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Minerva",
        "width": 1600,
        "height": 900,
        "minWidth": 900,
        "minHeight": 680,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; connect-src 'self' https://*.supabase.co https://*.supabase.in wss://*.supabase.co https://github.com https://api.github.com https://objects.githubusercontent.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyMTc5QThFRDYwQ0I2MjQKUldRa3RneldqcG9YOG5CcUoyT1QvdjkvaTl4ME5XU3h2T3FwZS9RTU9OdC9SUVZzVG81bjZ3b3kK",
      "endpoints": [
        "https://github.com/byhelaman/minerva/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}